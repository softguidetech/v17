<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_service_request_page" name="Invoice Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (service_request._name, service_request.id, service_request.env.ref('thiqah_project.service_request_action').id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_service_request_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-if="service_request.project_id" t-field="service_request.project_id.name"/>
                            <b t-else="1" t-field="service_request.project_id"/>
                        </h2>
                        <div class="small" t-if="service_request.state not in ('done', 'in_progress')">
                            <i class="fa fa-clock-o"/>
                            <span class="o_portal_sidebar_timeago ml4" t-att-datetime="service_request.create_date"/>
                        </div>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="service_request.get_portal_url_custom(report_type='pdf', download=True)" title="Download">
                                            <i class="fa fa-download"/>
                                            Download</a>
                                    </div>

                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_service_request_print" t-att-href="service_request.get_portal_url_custom(report_type='pdf')" id="print_invoice_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/>
                                            Print</a>
                                    </div>
                                    
                                </div>
                            </li>
                            <li t-if="service_request.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1">
                                    <strong class="text-muted">
                                       Created By
                                    </strong>
                                </div>

                                <div class="row">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(service_request.user_id.avatar_1024)" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0">
                                        <span t-field="service_request.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small">
                                            <i class="fa fa-fw fa-comments"/>
                                            <b>Send message</b>
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="invoice_content" class="col-12 col-lg">
                    <!-- <t t-if="error or warning" t-call="account.portal_invoice_error"/>
                    <t t-if="success and (not error and not warning)" t-call="account.portal_invoice_success"/> -->

                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                        </div>
                        <iframe id="service_request_html" class="mt8 mb8" width="100%" height="100%" frameborder="0" scrolling="no" t-att-src="service_request.get_portal_url_custom(report_type='html')"/>
                    </div>
                    <!-- chatter -->
                    <div id="invoice_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="service_request"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
