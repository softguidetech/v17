<?xml version="1.0" encoding="utf-8"?>

<templates>

    <!-- Main component of this Widget && Adding a client action-->
    <t t-name="_legal_dashboard">
        <div class="o_action o_thiqah_dashboard">
            <div class="o_content container-fluid legal_dashboard_dom pt-3"></div>
        </div>
    </t>

    <t t-name="thiqah_legal_dashboard">
        <div id="_legal_dashboard_id">

            <div class="container">
                <div class="row">
                    <div class="col-sm padding-custom">
                        <div class="container legal-card text-center">
                            <div class="row no-gutters">
                                <div class="col-sm-12 col-md-4">
                                    <i class="fa fa-file-o fa-2x text-gray-300"/>
                                </div>
                                <div class="col-12 col-sm-6 col-md-8">
                                    <div>
                                        <span class="text-center legal_span_color">Runnig Contracts</span>
                                    </div>
                                    <div>
                                        <span class="subspan_color">Runnig In Your Inbox</span>
                                    </div>
                                    <div>
                                        <span class="legal_span_color" id="running_count">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <a href="#" class="stretched-link" id="legal_running_card"/>
                        </div>
                    </div>

                    <div class="col-sm padding-custom">
                        <div class="container legal-card text-center">
                            <div class="row no-gutters">
                                <div class="col-sm-12 col-md-4">
                                    <i class="fa fa-folder-open-o fa-2x text-gray-300"/>
                                </div>
                                <div class="col-12 col-sm-6 col-md-8">
                                    <div>
                                        <span class="text-center legal_span_color">Pre End Contracts</span>
                                    </div>
                                    <div>
                                        <span class="subspan_color">Pre End In Your Inbox</span>
                                    </div>
                                    <div>
                                        <span class="legal_span_color" id="pre_end_count">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <a href="#" class="stretched-link" id="legal_pre_end_card"/>
                        </div>
                    </div>

                    <div class="col-sm padding-custom">
                        <div class="container legal-card text-center">
                            <div class="row no-gutters">
                                <div class="col-sm-12 col-md-4">
                                    <i class="fa fa-star-o fa-2x text-gray-300"/>
                                </div>
                                <div class="col-12 col-sm-6 col-md-8">
                                    <div>
                                        <span class="text-center legal_span_color">End Contracts</span>
                                    </div>
                                    <div>
                                        <span class="subspan_color">End In Your Inbox</span>
                                    </div>
                                    <div>
                                        <span class="legal_span_color" id="end_count">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <a href="#" class="stretched-link" id="legal_end_card"/>

                        </div>
                    </div>

                    <div class="col-sm padding-custom">
                        <div class="container legal-card text-center">
                            <div class="row no-gutters">
                                <div class="col-sm-12 col-md-4">
                                    <i class="fa fa-files-o fa-2x text-gray-300"/>
                                </div>
                                <div class="col-12 col-sm-6 col-md-8">
                                    <div>
                                        <span class="text-center legal_span_color">Total Contracts</span>
                                    </div>
                                    <div>
                                        <span class="subspan_color">Total In Your Inbox</span>
                                    </div>
                                    <div>
                                        <span class="legal_span_color" id="total_contracts">
                                        </span>
                                    </div>
                                </div>
                                <a href="#" class="stretched-link" id="_total_legal_card"/>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="legal_table">
                    <div class="alert alert-info text-center">
                        <span class="legal_span_color">Runnig Contracts</span>
                    </div>
                    <div id="draft_request_error" class="alert alert-info d-none">
                There are currently no pre end contracts for your account.
                    </div>

                    <t>
                        <div class="table-responsive">
                            <table id="running_contracts" class="table table-striped table-hover dt-responsive display nowrap" cellspacing="0">
                            </table>
                        </div>
                    </t>
                </div>

                <div class="legal_table">
                    <div class="alert alert-info text-center">
                        <span class="legal_span_color">Pre End Contracts</span>
                    </div>
                    <div id="draft_request_error" class="alert alert-info d-none">
                There are currently no pre end contracts for your account.
                    </div>

                    <t>
                        <div class="table-responsive">
                            <table id="pre_end_contracts" class="table table-striped table-hover dt-responsive display nowrap" cellspacing="0">
                            </table>
                        </div>
                    </t>
                </div>


                <div class="legal_table">
                    <div class="alert alert-info text-center">
                        <span class="legal_span_color">End Contracts</span>
                    </div>
                    <div id="draft_request_error" class="alert alert-info d-none">
                There are currently no pre end contracts for your account.
                    </div>

                    <t>
                        <div class="table-responsive">
                            <table id="end_contracts" class="table table-striped table-hover dt-responsive display nowrap" cellspacing="0">
                            </table>
                        </div>
                    </t>
                </div>




            </div>


        </div>
    </t>



</templates>